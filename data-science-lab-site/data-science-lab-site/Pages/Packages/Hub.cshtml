@page
@model data_science_lab_site.Pages.Packages.HubModel
@{
}

<h1 class="text-info text-center">Hub</h1>
<hr/>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search..." asp-for="Search" />
            <select asp-for="Type" class="form-control" asp-items="Model.Types"></select>
            <button type="submit" class="btn rounded-0 bg-light">
                <i class="fa fa-search"></i>
            </button>
        </div>
    </div>
</form>
@foreach (var package in Model.Packages)
{
    @await Component.InvokeAsync("PackageCard", package)
}