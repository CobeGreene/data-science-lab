@page
@model data_science_lab_site.Pages.Packages.IndexModel
@{
}

<h1 class="text-info">
    Your Plugins
    <span class="float-right">
        <a class="btn btn-light" asp-page="/Packages/Publish">Publish</a>
    </span>
</h1>
<hr />
@if (Model.Packages.Count == 0)
{
    <p>No plugins yet. Why don't you publish <strong>one!</strong></p>
}
else
{
    @foreach (var package in Model.Packages)
    {
        @await Component.InvokeAsync("PackageCard", package)
    }
}
